# Server
PORT=8080

# Database
# For Docker: Use postgres:5432 (internal network)
# For local: Use localhost:5432
DATABASE_URL=postgres://storm:storm@localhost:5432/stormdata?sslmode=disable

# Kafka Configuration
# For Docker: Use kafka:9092 (internal network)
# For local: Use localhost:29092
KAFKA_BROKERS=localhost:29092
KAFKA_TOPIC=transformed-weather-data
KAFKA_GROUP_ID=storm-data-api

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Shutdown
SHUTDOWN_TIMEOUT=10s

# Batch Processing
BATCH_SIZE=50
BATCH_FLUSH_INTERVAL=500ms
